{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Scenario</h1>
        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ scenario.id }}</td>
                </tr>
                <tr>
                    <th>Clientstart</th>
                    <td>{{ scenario.clientStart }}</td>
                </tr>
                <tr>
                    <th>Periodicity</th>
                    <td>{{ scenario.periodicity }}</td>
                </tr>
                <tr>
                    <th>Clientadd</th>
                    <td>{{ scenario.clientAdd }}</td>
                </tr>
                <tr>
                    <th>Cost</th>
                    <td>{{ scenario.cost }}</td>
                </tr>
                <tr>
                    <th>Energycost</th>
                    <td>{{ scenario.energyCost }}</td>
                </tr>
                <tr>
                    <th>Isbookmarked</th>
                    <td>{% if scenario.isBookmarked %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Createdat</th>
                    <td>{% if scenario.createdAt %}{{ scenario.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ scenario.name }}</td>
                </tr>
            </tbody>
        </table>

        <ul class="center">
            <li>
                <a class="btn" href="{{ path('scenario_index') }}">Retourner Ã  ma liste</a>
            </li>
            <br>
            <li>
                <a class="btn" href="{{ path('scenario_edit', { 'id': scenario.id }) }}">Modifier</a>
            </li>
            <br>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
